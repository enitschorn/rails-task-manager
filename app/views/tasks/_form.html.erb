<%= form_for task do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_field :details, class: 'form-control' %>
  </div>

  <div class="form-group">
  <% if task.persisted  %>
    <%= f.label :completed %>
    <%= f.text_field :completed, class: 'form-control' %>
    <% end %>
  </div>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>
